largeur = 150px
haut = 100px

.users-link-section, .projects-link-section
	padding 0
	.users, .projects
		

		text-align center

		.navbar-inner
			text-align left
		.content
			min-height 500px
			text-align center
			//overflow-y scroll

			.user:first-child
				//margin-left 30px
			tr
				vertical-align top
			.user						
				text-align left
				min-height haut
				max-height haut
				border 1px rgba(0, 0, 0, 0.1) solid
				border-radius 10px
				margin 0
				padding 0
				vertical-align top
				img
					margin-top -2px
					margin-left -1px
					display inline
					max-width haut
					max-height haut
					border-top-left-radius 10px
					border-bottom-left-radius 10px
					box-shadow 0px 0px 5px lightgreen
				.info-user
					width 100%					

				.connected
					background-color green
					width 20px
					height 20px
					float right
					border-bottom-left-radius 10px
					border-top-right-radius 10px
					margin-right -1px
					margin-top -1px

		.project-name
			font-size larger
			text-decoration underline
			font-weight bold
		.country
			display inline

