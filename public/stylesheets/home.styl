body_padding = 20px

.red
	border 1px red solid

body
	padding 0 body_padding 0 body_padding
	font 14px  "Lucida Grande", Helvetica, Arial, sans-serif
	background-image url("/images/backgrounds/main-rzd.jpg")
	background-size cover

a
	color #00b7ff

.nav li
	margin-right 10px

padding_main_container = 0 30px 0 30px
radius_main = 10px
.main-container
	margin-top 45px
	padding padding_main_container
	background-color rgba(255, 255, 255, 0.8)
	border-radius radius_main

margin_top = 60px 0 0 0
margin_section = 30px 0 30px 0

.header-top
	padding margin_top
	margin margin_top
	text-align center

	.content
		padding-top 30px		
	.list-group-item		
		text-align left
		table
			width 100%
			td
				width 50%
				vertical-align middle
			.news-date
				font-style italic
				color gray
				text-align right
	.list-group-item-text
		text-align justify

.section
	padding margin_section
	text-align center
	.titre
		padding-bottom 20px
	.content
		font-size normal
		text-align justify

.titre
	font-size xx-large
	font-weight bold
	text-shadow 0 0 1px gray



.settings-btn
	color white

.logout-btn
	color red

separation = 1px gray solid

.separation-right
	border-right separation
.separation-left
	border-left separation
.separation-top
	border-top separation
.separation-bottom
	border-bottom separation

radius = 20px
.border-bottom-round
	border-bottom-left-radius radius
	border-bottom-right-radius radius


