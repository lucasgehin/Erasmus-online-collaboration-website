body_padding = 20px

body
	padding 0 body_padding 0 body_padding
	font 14px  "Lucida Grande", Helvetica, Arial, sans-serif
	background-image url("/images/backgrounds/main-rzd.jpg")
	background-size cover

a
	color #00b7ff

.nav li
	margin-right 10px

.main-container
	margin-top 10px
	background-color rgba(255, 255, 255, 0.8)


margin_header = 60px

.header-top
	margin margin_header 0 margin_header 0
	
	text-align center

.header-section
	padding margin_header 0 margin_header 0
	text-align center

.titre
	font-size xx-large
	font-weight bold
	text-shadow 0 0 1px gray

.content
	font-size normal

.settings-btn
	color white

.logout-btn
	color red

separation = 1px gray solid

.separation-right
	border-right separation
.separation-left
	border-left separation
.separation-top
	border-top separation
.separation-bottom
	border-bottom separation

radius = 20px
.border-bottom-round
	border-bottom-left-radius radius
	border-bottom-right-radius radius


