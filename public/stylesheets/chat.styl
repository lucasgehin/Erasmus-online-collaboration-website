

body
	padding 0 1%

	background-image url("/images/backgrounds/main-rzd.jpg")
	background-size cover
	

.logout-btn
	color red

#chat

	background-color #FFFE
	padding 1%
	border-radius 5px
	height 90%


#ajaxloader
	position fixed
	
	top 310px
	left 50%
	margin-left -65px
	width 128px
	display none

.room
	
	overflow-y scroll

	text-align center

	.liste
		text-align left
		ul
			padding-left 10%

.people
	
	overflow-y scroll

	text-align center

	#users
		text-align left
		ul
			list-style-type none
			padding 0

.chat_window
	
	overflow-y scroll
	overflow-x hidden

	.messages
		
		.message
			min-width 40%
			max-width 89%
			box-shadow 0px 0px 5px gray
			border 1px solid white
			border-radius 5px
			padding 1% 2%
			word-break break-all
		.fromMe
			margin 6px 3% 0.5% 0
			float right
		.fromOther
			margin 6px 0 0.5% 3%
			float left
		.date
			float right

.people_in_room
	font-size 24px
	margin-top: 2%;


.new_message button
	float right
	display inline-block
	margin-top 0.3%
	width 60px
	
