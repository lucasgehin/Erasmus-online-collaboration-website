body
	padding 0 1.1%
	font 14px 'Ubuntu' , "Lucida Grande", Helvetica, Arial, sans-serif
	background url("/images/backgrounds/amphitheater-small.jpg") no-repeat center center fixed
	background-size cover

.logout-btn
	color red

.navbar
	img
		width 50px
		margin-top 1px
		border-radius 5px
		box-shadow 0 0 5px gray



#ajaxloader
	position fixed
	z-index 9999
	top 310px
	left 50%
	margin-left -65px
	width 128px
	display none

padding_main_container = 0 30px 0 30px
radius_main = 10px

.main-container
	margin-top 55px
	margin-bottom 150px
	
	padding padding_main_container
	background-color rgba(255, 255, 255, 0.9)
	border-radius radius_main

margin_top = 60px 0 0 0
margin_section = 30px 0 30px 0
largeur = 150px
haut = 100px

.section
	padding margin_section
	text-align center
	min-height 200px
	.titre
		padding-bottom 20px
	.content
		font-size normal
		text-align justify

		.document
			text-align left
			min-height haut
			max-height haut
			border 1px rgba(0, 0, 0, 0.1) solid
			background-color rgba(255,255,255, 0.9)
			border-radius 10px
			margin 0
			padding 0
			vertical-align top
			> .inner
				width 100%
				padding 1%
			.document-title
				width 100%
				text-align center



.clearbackground
	background rgb(255,255,255) /* Old browsers */
	background url("data:image/svg+xml;base64,")
	background -moz-linear-gradient(top, rgba(255,255,255,1) 0%, rgba(229,229,229,1) 100%) /* FF3.6+ */
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,1)), color-stop(100%,rgba(229,229,229,1))) /* Chrome,Safari4+ */
	background -webkit-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(229,229,229,1) 100%) /* Chrome10+,Safari5.1+ */
	background -o-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(229,229,229,1) 100%) /* Opera 11.10+ */
	background -ms-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(229,229,229,1) 100%) /* IE10+ */
	background linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(229,229,229,1) 100%) /* W3C */
	//filter progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#e5e5e5',GradientType=0 ) /* IE6-8 */
.clearbackground:hover
	box-shadow 0 0 5px gray
	cursor pointer

.ng-enter
	-webkit-animation 0.6s message_appear
	-moz-animation 0.6s message_appear
	-o-animation 0.6s message_appear
	animation 0.6s message_appear

.ng-leave
	-webkit-animation 0.6s message_appear  reverse
	-moz-animation 0.6s message_appear reverse
	-o-animation 0.6s message_appear reverse
	animation 0.6s message_appear reverse


@keyframes message_appear
	from 
		opacity	0
	to 
		opacity	1