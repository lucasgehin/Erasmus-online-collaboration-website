doctype html
html
	head
		title Chat - IpVIOPE


		link(rel='stylesheet', href='/stylesheets/chat.css')

		link(rel='stylesheet', href='/javascripts/bootstrap/css/bootstrap.css')
		link(rel='stylesheet', href='/javascripts/bootstrap/css/bootstrap-theme.css')
		script(type='text/javascript', src='/socket.io/socket.io.js')

		

	body
		.navbar.navbar-default(role='navigation')
			.container-fluid
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') IpVIOPE

			#navbar-main.collapse.navbar-collapse
				ul.nav.navbar-nav
					
					li
						a(href='/home')
							span.glyphicon.glyphicon-home
							|  Home
					li
						a(href='#')
							span.glyphicon.glyphicon-pencil
							|  Documents
					li
						a(href='/calendar')
							span.glyphicon.glyphicon-calendar
							|  Calendar
					

					
				ul.nav.navbar-nav.navbar-right
					li.dropdown
						a.dropdown-toggle(href='#', data-toggle='dropdown')  Settings <b class='caret'> </b>
							

							//- button.btn.btn-danger.navbar-btn(type='button', href='#') Settings

							//- button.btn.btn-danger.navbar-btn.dropdown-toggle(type='button', data-toggle='dropdown')
							//- 	span.glyphicon.glyphicon-chevron-down
							//- 	span.sr-only
							ul.dropdown-menu
								li
									a(href='#') Help
								li
									a(href='#') Report a bug
								li.divider
								li
									a(href='logout')
										span.logout-btn
											span.icon-remove-sign
											| Logout
		.main-container
			.main-container.container-fluid
				.row
					.col-xs-12
						#chat
							.people
								.well.well-sm
									|People in this room
								.liste
									#users
									


							.chat_window
								.messages
									.message#msgtpl(style="")
										//img(src="{{{user.avatar}}}")
										.info
										p
											strong 
												|{{message.user.username}}
										p
											| {{message.message}}
										span.date
											| {{message.h}}:{{message.m}}


							.room
								.well.well-sm
									| Rooms
								.liste
									| Home Room

							.create_room
								input.form-control(placeholder="New room")
							.new_message
								form#form(action="")
									input#message.form-control(placeholder="Write here your message")
									//button.btn.btn-success#send(type='submit') Send

		img#ajaxloader(src="/images/ajax-loader.gif", alt='')



		script(type='text/javascript', src='/javascripts/jquery-1.10.2.min.js')
		script(type='text/javascript', src='/javascripts/bootstrap/js/bootstrap.js')
		script(type='text/javascript', src='/javascripts/chat/main.js')
		script(type='text/javascript', src='/javascripts/chat/mustache.js.vendor')
		script(type='text/javascript', src='/javascripts/chat/controller.js')
		


