doctype html
html(ng-app)
	head
		title Chat - IpVIOPE


		link(rel='stylesheet', href='/stylesheets/chat.css')

		link(rel='stylesheet', href='/javascripts/bootstrap/css/bootstrap.css')
		link(rel='stylesheet', href='/javascripts/bootstrap/css/bootstrap-theme.css')
		script(type='text/javascript', src='/socket.io/socket.io.js')

		

	body
		.navbar.navbar-default(role='navigation')
			.container-fluid
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') IpVIOPE

			#navbar-main.collapse.navbar-collapse
				ul.nav.navbar-nav
					
					li
						a(href='/home')
							span.glyphicon.glyphicon-home
							|  Home
					li
						a(href='#')
							span.glyphicon.glyphicon-pencil
							|  Documents
					li
						a(href='/calendar')
							span.glyphicon.glyphicon-calendar
							|  Calendar
					

					
				ul.nav.navbar-nav.navbar-right
					li.dropdown
						a.dropdown-toggle(href='#', data-toggle='dropdown')  Settings <b class='caret'> </b>
							

							//- button.btn.btn-danger.navbar-btn(type='button', href='#') Settings

							//- button.btn.btn-danger.navbar-btn.dropdown-toggle(type='button', data-toggle='dropdown')
							//- 	span.glyphicon.glyphicon-chevron-down
							//- 	span.sr-only
							ul.dropdown-menu
								li
									a(href='#') Help
								li
									a(href='#') Report a bug
								li.divider
								li
									a(href='logout')
										span.logout-btn
											span.icon-remove-sign
											| Logout
		.main-container
			.main-container.container-fluid
				.col-xs-12
					.row
						#chat
							.people
								.well.well-sm
									| People in this room
								.liste#users(ng-controller="userController")
									ul
										li(ng-repeat="user in liste_users")
											.user
												img(ng-src="/images/Country/{{user.country.name}}.jpg", alt="{{user.country.name}}")
												| &emsp;{{user.username}}
	
	
	
	
								
							.room
								.well.well-sm
									| Rooms
								.liste
									| Home Room
	
							.chat_window
								.messages(ng-controller="messageController")
									.message(ng-repeat="message in liste_messages")
										//img(src="{{{user.avatar}}}")
										.info
											span
												strong 
													| {{message.user.username}}
											span.date
												| {{message.date}}
										
										.content 
											| {{message.message}}
	
					
							
	
							.create_room
								input.form-control(placeholder="New room")
							.new_message
					
							
								form(ng-controller="messageController", ng-submit="sendMessage()")
									input.form-control(ng-model="message_typing", placeholder="Type your message here")
									//button.btn.btn-success(type='submit') Send

		img#ajaxloader(src="/images/ajax-loader.gif", alt='')

		script(type='text/javascript', src='/javascripts/jquery-1.10.2.min.js')
		script(type='text/javascript', src='/javascripts/angular.js')
		script(type='text/javascript', src='/javascripts/bootstrap/js/bootstrap.js')
		script(type='text/javascript', src='/javascripts/chat/main.js')		
		script(type='text/javascript', src='/javascripts/chat/controller.js')
		


