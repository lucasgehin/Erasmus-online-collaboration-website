    <script type="text/javascript">

    $(window).on("load",function(){

    	setTimeout(function(){
    		function rotate(){
    			$("#logo-rotate").rotate({
			            duration:10000,
			            angle: 0, 
			            animateTo:360,
			            callback: function(){
			            	start_shake_logos();
			            	rotate();
			            },
			            easing: function (x,t,b,c,d){ 
          					return c*(t/d)+b;
      					}
			    });
    		}
    		rotate();
    		    	
    	}, 1000);



    	var liste_logos=[
    		{id:"#logo-ipl"},
    		{id:"#logo-inh"},
    		{id:"#logo-metropolia"},
    		{id:"#logo-udl"},
    		{id:"#logo-gcu"},
    		{id:"#logo-cuot"},
    		{id:"#logo-unimi"},
    	];

    	
    	function shake_logo( id, time ){
    		setTimeout(function(){

    			$(id).effect("shake",{
    				distance: 1,
    				times: 3
    			});
			    

    		}, time*100);

    	}


    	function start_shake_logos(){
	    	for (var i = 0; i < liste_logos.length; i++) {
	    		var logo = liste_logos[i];
	    		shake_logo( logo.id, i+1);
	    	};

    	}

    	start_shake_logos();

    });
    	


